{
  "extends": [
    "stylelint-config-palantir",
    "stylelint-config-palantir/sass.js"
  ],
  "rules": {
    "declaration-empty-line-before": null,
    "selector-combinator-space-after": null,
    "value-list-comma-newline-after": null,
    "indentation": [
      2,
      {
        "ignore": [
          "value"
        ]
      }
    ],
    "max-line-length": [
      120,
      {
        "ignore": [
          "comments"
        ]
      }
    ],
    "selector-max-universal": 1
  }
}
